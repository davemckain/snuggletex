<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>full</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <moduleSets>
    <!-- Binaries -->
    <moduleSet>
      <useAllReactorProjects>true</useAllReactorProjects>
      <includes>
        <include>uk.ac.ed.ph.snuggletex:snuggletex-core</include>
        <include>uk.ac.ed.ph.snuggletex:snuggletex-upconversion</include>
        <include>uk.ac.ed.ph.snuggletex:snuggletex-jeuclid</include>
        <include>uk.ac.ed.ph.snuggletex:snuggletex-webapp</include>
      </includes>
      <binaries>
        <outputDirectory>bin</outputDirectory>
        <includeDependencies>true</includeDependencies>
        <dependencySets>
          <dependencySet>
            <unpack>false</unpack>
            <scope>runtime</scope>
          </dependencySet>
        </dependencySets>
        <unpack>false</unpack>
      </binaries>
    </moduleSet>
    <!-- Source JARs -->
    <moduleSet>
      <includes>
        <include>uk.ac.ed.ph.snuggletex:snuggletex-core</include>
        <include>uk.ac.ed.ph.snuggletex:snuggletex-upconversion</include>
        <include>uk.ac.ed.ph.snuggletex:snuggletex-jeuclid</include>
        <include>uk.ac.ed.ph.snuggletex:snuggletex-webapp</include>
      </includes>
      <sources>
        <includeModuleDirectory>false</includeModuleDirectory>
        <fileSets>
          <fileSet>
            <directory>target</directory>
            <outputDirectory>src/dist</outputDirectory>
            <includes>
              <include>*-sources.jar</include>
            </includes>
          </fileSet>
        </fileSets>
      </sources>
    </moduleSet>
    <!-- (We need the generated snuggletex.css) -->
    <moduleSet>
      <includes>
        <include>uk.ac.ed.ph.snuggletex:snuggletex-core</include>
      </includes>
      <sources>
        <includeModuleDirectory>false</includeModuleDirectory>
        <fileSets>
          <fileSet>
            <directory>target</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
              <include>snuggletex.css</include>
            </includes>
          </fileSet>
        </fileSets>
      </sources>
    </moduleSet>
  </moduleSets>
  <fileSets>
    <!-- Include README.txt and other stuff at top level -->
    <fileSet>
      <directory>${project.parent.basedir}</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>LICENSE.txt</include>
        <include>README.txt</include>
      </includes>
    </fileSet>
    <!-- Put rest of project source in 'src' container directory -->
    <fileSet>
      <directory>${project.parent.basedir}</directory>
      <outputDirectory>src/project</outputDirectory>
      <excludes>
        <exclude>target/**</exclude>
        <exclude>*/target/**</exclude>
        <exclude>LICENSE.txt</exclude>
        <exclude>README.txt</exclude>
      </excludes>
    </fileSet>
  </fileSets>
</assembly>
